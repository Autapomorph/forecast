{
  "name": "forecast",
  "version": "0.9.0",
  "private": true,
  "scripts": {
    "start": "run-p -lns start:client start:server",
    "start:client": "react-scripts start",
    "start:server": "tsnd --respawn -P tsconfig-server.json src/api/index.ts",
    "sc": "npm run start:client",
    "ss": "npm run start:server",
    "ss:dev": "cross-env NODE_ENV=development npm run ss",
    "ss:prod": "cross-env NODE_ENV=production npm run ss",
    "ss:test": "cross-env NODE_ENV=test npm run ss",
    "build": "react-scripts build",
    "now-build": "npm run build",
    "test": "react-scripts test --env=jsdom",
    "lint": "run-s -c lint:js lint:styles",
    "lint:js": "eslint src/**/*.{js,jsx,ts,tsx}",
    "lint:styles": "run-s -c lint:sc lint:css",
    "lint:css": "stylelint src/**/*.{css,scss,sass,less} --config .stylelintrc-format.js",
    "lint:sc": "stylelint src/**/*.{js,jsx,ts,tsx}",
    "eject": "react-scripts eject"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.8.2",
    "@fortawesome/fontawesome-svg-core": "^1.2.18",
    "@fortawesome/free-regular-svg-icons": "^5.8.2",
    "@fortawesome/free-solid-svg-icons": "^5.8.2",
    "@fortawesome/react-fontawesome": "^0.1.4-1",
    "chalk": "^2.4.2",
    "cors": "^2.8.5",
    "dark-sky": "^1.1.5",
    "dotenv": "^8.0.0",
    "express": "^4.16.4",
    "i18next": "^15.1.0",
    "i18next-browser-languagedetector": "^3.0.1",
    "localforage": "^1.7.3",
    "luxon": "^1.13.2",
    "normalize.css": "^8.0.1",
    "qs": "^6.7.0",
    "react": "^16.8.6",
    "react-beautiful-dnd": "^11.0.3",
    "react-collapsible": "^2.6.0",
    "react-dom": "^16.8.6",
    "react-i18next": "^10.9.0",
    "react-md-spinner": "^0.3.0",
    "react-redux": "^7.0.3",
    "react-scripts": "^3.0.1",
    "react-slick": "^0.24.0",
    "react-toastify": "^5.1.0",
    "react-use": "^9.0.0",
    "redux": "^4.0.1",
    "redux-logger": "^3.0.6",
    "redux-persist": "^5.10.0",
    "redux-thunk": "^2.3.0",
    "slick-carousel": "^1.8.1",
    "styled-components": "^4.2.0",
    "url": "^0.11.0",
    "weathericons": "^2.1.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.5",
    "@types/dotenv": "^6.1.1",
    "@types/enzyme": "^3.9.1",
    "@types/enzyme-adapter-react-16": "^1.0.5",
    "@types/express": "^4.16.1",
    "@types/jest": "^24.0.12",
    "@types/luxon": "^1.12.0",
    "@types/node": "^12.0.0",
    "@types/qs": "^6.5.3",
    "@types/react": "^16.8.17",
    "@types/react-beautiful-dnd": "^11.0.2",
    "@types/react-dom": "^16.8.4",
    "@types/react-redux": "^7.0.8",
    "@types/react-slick": "^0.23.4",
    "@types/redux-logger": "^3.0.7",
    "@types/styled-components": "^4.1.14",
    "@typescript-eslint/eslint-plugin": "^1.8.0",
    "@typescript-eslint/parser": "^1.8.0",
    "babel-plugin-macros": "^2.5.1",
    "cross-env": "^5.2.0",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.12.1",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-jest-enzyme": "^7.0.2",
    "eslint-config-prettier": "^4.2.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.13.0",
    "fetch-mock": "^7.3.3",
    "husky": "^2.2.0",
    "lint-staged": "^8.1.6",
    "node-fetch": "^2.5.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.17.0",
    "redux-devtools-extension": "^2.13.8",
    "redux-mock-store": "^1.5.3",
    "stylelint": "^10.0.1",
    "stylelint-config-prettier": "^5.1.0",
    "stylelint-config-standard": "^18.3.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.7.0",
    "ts-node-dev": "^1.0.0-pre.32",
    "typescript": "^3.4.5"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/index.{js,ts}",
      "!src/serviceWorker.{js,ts}"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "src/**/*.{js,jsx,ts,tsx}": [
        "prettier --write",
        "stylelint",
        "eslint --max-warnings=0",
        "git add"
      ],
      "src/**/*.{css,scss,sass,less}": [
        "prettier --write",
        "stylelint --fix --config .stylelintrc-format.js",
        "git add"
      ],
      "src/**/*.{json,md}": [
        "prettier --write",
        "git add"
      ]
    },
    "ignore": [
      "src/serviceWorker.{js,ts}"
    ]
  }
}
