{
  "name": "forecast",
  "version": "0.9.0",
  "private": true,
  "scripts": {
    "start": "rescripts start",
    "build": "rescripts build",
    "now-build": "npm run build",
    "test": "rescripts test --env=jsdom",
    "lint": "cross-env NODE_ENV=test eslint ./**/*.{js,jsx}",
    "lint:css": "stylelint ./**/*.{css,scss,sass,less} --config .stylelintrc-format.js",
    "lint:sc": "stylelint ./**/*.{js,jsx,ts,tsx}",
    "eject": "react-scripts eject"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.6.3",
    "@fortawesome/fontawesome-svg-core": "^1.2.12",
    "@fortawesome/free-regular-svg-icons": "^5.6.3",
    "@fortawesome/free-solid-svg-icons": "^5.6.3",
    "@fortawesome/react-fontawesome": "^0.1.3",
    "i18next": "^13.1.0",
    "i18next-browser-languagedetector": "^2.2.4",
    "luxon": "^1.9.0",
    "normalize.css": "^8.0.1",
    "qs": "^6.6.0",
    "react": "^16.7.0",
    "react-beautiful-dnd": "^10.0.3",
    "react-collapsible": "^2.3.2",
    "react-dom": "^16.7.0",
    "react-i18next": "^9.0.1",
    "react-md-spinner": "^0.3.0",
    "react-redux": "^6.0.0",
    "react-scripts": "2.1.2",
    "react-slick": "^0.23.2",
    "react-toastify": "^4.5.1",
    "redux": "^4.0.1",
    "redux-logger": "^3.0.6",
    "redux-persist": "^5.10.0",
    "redux-thunk": "^2.3.0",
    "slick-carousel": "^1.8.1",
    "styled-components": "^4.1.3",
    "weathericons": "^2.1.0"
  },
  "devDependencies": {
    "@rescripts/cli": "^0.0.7",
    "@rescripts/rescript-use-babel-config": "^0.0.4",
    "babel-plugin-module-resolver": "^3.1.1",
    "babel-plugin-styled-components": "^1.10.0",
    "cross-env": "^5.2.0",
    "enzyme": "^3.8.0",
    "enzyme-adapter-react-16": "^1.7.1",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-jest-enzyme": "^7.0.1",
    "eslint-config-prettier": "^3.3.0",
    "eslint-import-resolver-babel-module": "^5.0.0-beta.1",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.1",
    "fetch-mock": "^7.3.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.0",
    "prettier": "^1.15.3",
    "redux-devtools-extension": "^2.13.7",
    "redux-mock-store": "^1.5.3",
    "stylelint": "^9.9.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.5.1"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/index.{js,ts}",
      "!src/serviceWorker.{js,ts}"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.{js,jsx}": [
        "prettier --write",
        "stylelint",
        "eslint --max-warnings=0",
        "git add"
      ],
      "*.{css,scss,sass,less}": [
        "prettier --write",
        "stylelint --fix --config .stylelintrc-format.js",
        "git add"
      ],
      "*.{json,md}": [
        "prettier --write",
        "git add"
      ]
    }
  }
}
